{
  "name": "@teu-im/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared UI components and design system for Teu-Im",
  "license": "MIT",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./styles": {
      "import": "./src/styles/tokens.css"
    },
    "./styles/tokens.css": "./src/styles/tokens.css",
    "./styles/animations.css": "./src/styles/animations.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@teu-im/shared": "workspace:*"
  }
}
